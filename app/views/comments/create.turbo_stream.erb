<%= turbo_stream.update "post-#{@post.id}-comment-form" do %>
  <%= render partial: "comments/form", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update "post-#{@post.id}-comments-list" do %>
  <%= render partial: "comments/list", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update "post-#{@post.id}-comments-count" do %>
  <%= pluralize(@post.comments.count, "comment") %>
<% end %>
